package(default_visibility = ["//visibility:public"])

load("@npm_bazel_typescript//:index.bzl", "ts_devserver", "ts_library")

ts_library(
    name = "ts_demo",
    srcs = [
        "App.tsx",
        "index.ts",
    ],
    tsconfig = "//typescript:tsconfig.json",
    deps = [
        "//typescript/src/demo/components/Snackbar:snackbar_demo",
        "@npm//@types",
        "@npm//react",
        "@npm//react-dom",
    ],
)

ts_devserver(
    name = "devserver",
    entry_module = "examples/typescript/src/demo/index",
    port = 3000,
    scripts = [
        "//typescript/src/demo:bootstrap.js",
    ],
    serving_path = "/bundle.min.js",
    static_files = [
        "index.html",
    ],
    deps = [
        ":ts_demo",
        "@npm//react:react__umd",
        "@npm//react-dom:react-dom__umd",
    ],
)
